<?xml version="1.0" encoding="UTF-8"?>
<beans>
    <bean id="userService" class="com.xingfly.spring.test.bean.proxy.UserServiceImpl"/>

    <bean class="com.xingfly.spring.aop.framework.autoproxy.DefaultAdvisorAutoProxyCreator"/>

    <bean id="beforeAdvice" class="com.xingfly.spring.test.bean.proxy.UserServiceBeforeAdvice"/>

    <bean id="methodInterceptor" class="com.xingfly.spring.aop.framework.adapter.MethodBeforeAdviceInterceptor">
        <property name="advice" ref="beforeAdvice"/>
    </bean>

    <bean id="pointcutAdvisor" class="com.xingfly.spring.aop.aspectj.AspectJExpressionPointcutAdvisor">
        <property name="expression" value="execution(* com.xingfly.spring.test.bean.proxy.IUserService.*(..))"/>
        <property name="advice" ref="methodInterceptor"/>
    </bean>

    <bean id="pointcutAdvisor2" class="com.xingfly.spring.aop.aspectj.AspectJExpressionPointcutAdvisor">
        <property name="expression" value="execution(* com.xingfly.spring.test.bean.proxy.IUserService.*(..))"/>
        <property name="advice" ref="methodInterceptor"/>
    </bean>

</beans>